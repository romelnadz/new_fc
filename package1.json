{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "posthtml-prefix-class": "^1.0.5",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "build": "tailwindcss build -i ./css/output.css -o ./css/build.css",
    "minify": "npx tailwindcss -o ./css/build.css --minify",
    "watch": "npx tailwindcss -i ./css/input.css -o ./css/output.css --watch",
    "purge:tailwind": "tailwindcss build ./css/build.css -o ./css/build.css --purge"
  }
}
